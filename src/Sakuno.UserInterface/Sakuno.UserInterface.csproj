<Project Sdk="MSBuild.Sdk.Extras">

  <PropertyGroup>
    <TargetFramework>net462</TargetFramework>
    <OutputType>Library</OutputType>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <LangVersion>7.3</LangVersion>
    <RootNamespace>Sakuno.UserInterface</RootNamespace>
    <AssemblyName>Sakuno.UserInterface</AssemblyName>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <OutputPath>$(SolutionDir)artifacts\$(Configuration)\</OutputPath>
    <PackageId>Sakuno.UserInterface</PackageId>
    <Version>0.3.0-pre3</Version>
    <Authors>Kodama Sakuno</Authors>
    <Description>Sakuno's framework for WPF apps</Description>
    <Product>Sakuno.UserInterface</Product>
    <Company>Kodama Sakuno</Company>
    <Copyright>Copyright Â© 2018 Kodama Sakuno</Copyright>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseUrl>https://github.com/KodamaSakuno/Sakuno.UserInterface/blob/master/LICENSE.md</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/KodamaSakuno/Sakuno.UserInterface</PackageProjectUrl>
    <IncludeContentInPack>false</IncludeContentInPack>
    <ExtrasEnableWpfProjectSetup>true</ExtrasEnableWpfProjectSetup>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Sakuno.Base" Version="0.3.2" />
    <PackageReference Include="Sakuno.SystemLayer" Version="0.3.2" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="**\*.fx" />
    <Resource Include="**\*.ps" />
    <UpToDateCheckInput Include="**\*.fx" />
    <UpToDateCheckInput Include="**\*.ps" />
  </ItemGroup>

  <Target Name="PreBuild" AfterTargets="PreBuildEvent">
    <Exec Command="powershell -NoProfile -ExecutionPolicy Bypass -File $(SolutionDir)scripts\Execute-PreBuildEvent.ps1 -SolutionDir $(SolutionDir) -ProjectPath $(ProjectPath) -Configuration $(ConfigurationName) -TargetDir $(TargetDir) -TargetPath $(TargetPath)" />
  </Target>

</Project>
